<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="<%= widths[0]+ widths[1] %>" height="20">
  <linearGradient id="smooth" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>

  <mask id="round">
    <rect width="<%= widths[0]+ widths[1] %>" height="20" rx="3" fill="#fff"/>
  </mask>

  <g mask="url(#round)">
    <rect width="<%= widths[0] %>" height="20" fill="<%= colors[0] || "#555" %>"/>
    <rect x="<%= widths[0] %>" width="<%= widths[1] %>" height="20" fill="<%= colors[1] || "#4c1" %>"/>
    <rect width="<%= widths[0] + widths[1] %>" height="20" fill="url(#smooth)"/>
  </g>

  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans" font-size="10" font-weigth="lighter">
    <text x="<%= widths[0]/2 %>" y="15" fill="#010101" fill-opacity=".3"><%= texts[0] %></text>
    <text x="<%= widths[0]/2 %>" y="14"><%= texts[0] %></text>
    <text x="<%= widths[0] + widths[1]/2 - 1 %>" y="15" fill="#010101" fill-opacity=".3"><%= texts[1] %></text>
    <text x="<%= widths[0] + widths[1]/2 - 1 %>" y="14"><%= texts[1] %></text>
  </g>
</svg>
